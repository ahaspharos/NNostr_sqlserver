<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <AssemblyVersion>0.0.8</AssemblyVersion>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="wwwroot\content\images\nandu.svg" />
    </ItemGroup>

    <ItemGroup>
      <_WebToolingArtifacts Remove="Properties\PublishProfiles\IISProfile.pubxml" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="BTCPayServer.Client" Version="1.7.0" />
      <PackageReference Include="LinqKit" Version="1.2.2" />
      <PackageReference Include="LinqKit.Microsoft.EntityFrameworkCore" Version="6.1.2" />
      <PackageReference Include="Microsoft.AspNetCore.Mvc.RazorPages" Version="2.2.5" />
      <PackageReference Include="Microsoft.EntityFrameworkCore" Version="6.0.8" />
      <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="6.0.8">
